@using TheGalery.Web.Models
@model HomeViewModel
@{
    ViewBag.Title = "The Galery";
}
<head>
    <link href="~/Content/thumbnails.css" rel="stylesheet" />
</head>

<ul class="thumbnails" data-role="listview">
    @foreach (ImageGroupViewModel imageGroup in @Model.Images)
    {
        string thumbnailpath = Url.Action("Thumbnail", "Home", new { name = imageGroup.Name });
        string imagePath = Url.Action("Images", "Home", new { name = imageGroup.Name });
        <li>
            <a href="@imagePath">
                <img alt="Images from @imageGroup.Name" src="@thumbnailpath" class="thumbnail-no-border" />
                <span class="below-image">@imageGroup.Name</span>
                <span>@imageGroup.Count photo(s)</span>
            </a>
        </li>
    }
</ul>