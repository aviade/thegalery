@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li>
            <a href="@Url.Action("Index", "Gallery")">
                <img alt="home" src="~/fonts/home_black.png" />
            </a>
        </li>
        <li>
            @Html.ActionLink("Hello " + User.Identity.Name + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
        </li>
        <li>@Html.ActionLink("Logout", "Logout", "Auth")</li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>
            <div class="navbar-home">
                <a href="@Url.Action("Index", "Gallery")">
                    <img alt="home" src="~/fonts/home_black.png" />
                </a>
            </div>
        </li>
    </ul>
}
